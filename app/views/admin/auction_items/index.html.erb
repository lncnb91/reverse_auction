<% provide(:title, (I18n.t :list, scope: [:page_title, :auction_item])) %>
<div class="well">
  <%= render "search_form" %>
</div>

<table class="table table-striped table-bordered table-hover table-responsive">
  <tr class="success">
    <th><%= AuctionItem.h(:item_name) %></th>
    <th><%= AuctionItem.h(:auction_date) %></th>
    <th></th>
    <th></th>
  </tr>
  <% @auction_items.each do |auction_item| %>
    <tr>
      <td><%= link_to auction_item.item_name, admin_auction_item_path(auction_item) %></td>
      <td><%= auction_item.auction_date %></td>
      <td><%= link_to I18n.t(:edit), edit_admin_auction_item_path(auction_item) %> </td>
      <td>
        <%= link_to I18n.t(:destroy),
          admin_auction_item_path(auction_item),
          method: :delete,
          data: {confirm: I18n.t(:confirmation)} %>
      </td>
    </tr>
  <% end %>
</table>
