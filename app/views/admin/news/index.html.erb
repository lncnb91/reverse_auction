<% provide(:title, (I18n.t :list, scope: [:page_title, :news])) %>
<div class="well">
  <%= render "search_form" %>
</div>

<table class="table table-striped table-bordered table-hover table-responsive">
  <tr class="success">
    <th><%= News.h(:title) %></th>
    <th><%= News.h(:public_from) %></th>
    <th><%= News.h(:public_until) %></th>
    <th></th>
    <th></th>
  </tr>
  <% @newss.each do |news| %>
    <tr>
      <td><%= link_to news.title, admin_news_path(news) %></td>
      <td><%= news.public_from.time_to_date %></td>
      <td><%= news.public_until.time_to_date %></td>
      <td><%= link_to I18n.t(:edit), edit_admin_news_path(news) %> </td>
      <td>
        <%= link_to I18n.t(:destroy),
          admin_news_path(news),
          method: :delete,
          data: {confirm: I18n.t(:confirmation)} %>
      </td>
    </tr>
  <% end %>
</table>
