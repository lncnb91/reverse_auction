<title> List Users </title>
<h3> List Users </h3>
<div class="search">
  <%= render "search_form" %>
</div>
<br/>
<div>
  <table class="table table-striped table-bordered table-hover table-responsive">
  <tr class="success">
    <th><%= User.h(:user_name) %></th>
    <th><%= User.h(:remaining_gold) %></th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.user_name %></td>
      <td><%= user.remaining_gold %></td>
      <td>
        <%= link_to I18n.t(:destroy),
          admin_user_path(user),
          method: :delete,
          data: {confirm: I18n.t(:confirmation)} %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
